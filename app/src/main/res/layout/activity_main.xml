<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Проверить"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditText" android:layout_marginTop="50dp"
            android:textSize="24sp"/>
    <EditText
            android:id="@+id/EditText"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_marginTop="120dp"
            android:ems="10"
            android:hint="Введите номер карты"
            android:inputType="number|numberDecimal"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp" android:gravity="clip_horizontal|center_horizontal"/>
    <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="41dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginTop="100dp"
            android:textSize="24sp" android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>